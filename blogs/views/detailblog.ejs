<% include partials/header %>

<div class="container" style="color:white">
    <h2><%=blog.title %></h2>
    <img src="<%= blog.image %>">
    <br>
    <br>
    <p><b>created on <%= blog.date %></b></p>
    <% if(!currentUser) { %>
    <p> By :- <%= name %> </p>
    <% } else { %>
    <% if(currentUser.username === name){ %>
    <p> By :- You</p>
    <% } else { %>
    <%= name %>
    <% } %>
    <% } %>

   
    <p><%= blog.desc %></p>
   

    <ul class="list-group" style="margin-top:50px;margin-bottom:50px;">
   <% blog.comments.forEach(function(com){ %>

   <li class="list-group-item" style="color:white;background-color:rgba(0,0,0,0.5)"> <b><%= com.author %> - </b>     <%= com.content %> </li>

   <% }); %>
    </ul>

   

    <form action="/blogs/<%= blog._id %>/addcomment" method="GET"><button class="btn btn-primary"> Add a comment ! </button></form>

    

</div>


<% include partials/footer%>