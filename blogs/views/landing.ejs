<% include partials/header %>



<div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome !</h1>
      <p class="lead">This Site is Designed so that You can Create , Update , View and Delete your Blogs !</p>
      <hr class="my-4">
      <p>Enjoy some of the amazing stuffs in the Blogs on our Website !</p>
      <% if(currentUser){ %>
      <a class="btn btn-primary btn-lg" href="/blogs/create" role="button">Create a Blog</a>
      <% } %>
    </div>
    <div class="col lg-12">
        <% blogs.forEach(function(blog){ %>
                    <div class="col-md-3 col-sm-6">
                    <div class="thumbnail" style="text-align:center"><img src="<%= blog.image %>"><h4 class="caption"><%= blog.title %></h4>
                    <p><%= blog.desc.slice(0,100) %>...</p>
                    
                    <a href="/blogs/<%=blog._id%>" class="btn btn-primary">Read More !</a> 
                    
                    <% if(currentUser){ %>
                    <% if(String(currentUser._id) === String(blog.seller) ){ %>
                    <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST" style="display:inline-block">
                       <button class="btn btn-primary" type="submit"><span><i class="fa fa-trash" aria-hidden="true"></i></span></button>
                    </form>
                    <% } %>
                    <% } %>
                    </div>
                    </div>
                    <% }); %>
    </div>
</div>

<% include partials/footer %>